<div class="h1 mt-3">Kaaporas Clube de Aventura</div>
<div class="h3">Lista de Usuários Cadastrados</div>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <th>E-mail</th>
      <th>Data de associação</th>
      <th>Perfil de Acesso</th>
      <th colspan="2"></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.registration_date.to_formatted_s(:rfc822) %></td>
        <td><%= user.role %></td>
        <td><%= link_to "Editar", edit_user_path(user), class: "btn btn-success btn-sm" %></td>
        <td>
          <%= link_to "Excluir", user_path(user),
                                 method: :delete,
                                 data: { confirm: "Você tem certeza?" },
                                 class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
